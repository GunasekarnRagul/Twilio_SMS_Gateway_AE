<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_stock_picking_sms_config_form" model="ir.ui.view">
        <field name="name">stock.picking.sms.config.form</field>
        <field name="model">stock.picking.sms.config</field>
        <field name="arch" type="xml">
            <form string="Delivery SMS Configuration">
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" readonly="1"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="is_active" widget="boolean_toggle"/>
                        </group>
                        
                    </group>
                    
                    <notebook>
                        <page string="Template">
                            <field name="message_template" widget="text" 
                                   placeholder="Hello {partner_name}, your order {picking_name} is shipped..."
                                   style="min-height: 150px;"/>
                            <div class="alert alert-info mt-2">
                                <strong>Placeholders:</strong> {partner_name}, {picking_name}, {origin}, {carrier}, {tracking_ref}, {scheduled_date}
                            </div>
                        </page>
                                  <page string="Preview" name="preview">
                            <field name="preview_message" 
                                   widget="text" 
                                   nolabel="1"
                                   readonly="1"
                                   placeholder="Configure template to see preview..."
                                   style="min-height: 100px; background-color: #f8f9fa; padding: 10px; border-radius: 5px;"/>
                            
                            <div class="alert alert-warning mt-3" role="alert">
                                <strong>Note:</strong> This is a preview with sample data. Actual SMS will use real order information.
                            </div>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_stock_picking_sms_config_tree" model="ir.ui.view">
        <field name="name">stock.picking.sms.config.tree</field>
        <field name="model">stock.picking.sms.config</field>
        <field name="arch" type="xml">
            <tree decoration-success="is_active==True" decoration-muted="is_active==False">
                <field name="name"/>
                <field name="is_active" widget="boolean_toggle"/>
                <field name="total_sent"/>
            </tree>
        </field>
    </record>

<record id="action_stock_picking_sms_config_server" model="ir.actions.server">
    <field name="name">Delivery SMS Config</field>
    <field name="model_id" ref="model_stock_picking_sms_config"/>
    <field name="state">code</field>
    <field name="code">
action = env['stock.picking.sms.config'].action_open_delivery_sms_config()
    </field>
</record>



    <record id="view_picking_form_inherit_sms" model="ir.ui.view">
        <field name="name">stock.picking.form.inherit.sms</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            
            <xpath expr="//div[@name='button_box']" position="inside">
                <button class="oe_stat_button" 
                        type="object" 
                        name="action_view_sms_logs" 
                        icon="fa-commenting"
                        invisible="sms_log_count == 0">
                    <field name="sms_log_count" widget="statinfo" string="SMS Logs"/>
                </button>
            </xpath>

            <xpath expr="//field[@name='origin']" position="after">
                <field name="sms_sent" invisible="1"/>
            </xpath>
            
        </field>
    </record>

</odoo>