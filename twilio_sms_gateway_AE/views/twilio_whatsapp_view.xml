<odoo>
    <record id="view_twilio_whatsapp_tree" model="ir.ui.view">
        <field name="name">twilio.whatsapp.tree</field>
        <field name="model">twilio.whatsapp</field>
        <field name="arch" type="xml">
            <tree string="WhatsApp History" decoration-success="state == 'sent'" decoration-danger="state == 'failed'">
                <field name="create_date"/>
                <field name="recipient_type"/>
                <field name="recipient_single"/>
                <field name="message_body"/>
                <field name="state" widget="badge"/>
            </tree>
        </field>
    </record>

    <record id="view_twilio_whatsapp_form" model="ir.ui.view">
        <field name="name">twilio.whatsapp.form</field>
        <field name="model">twilio.whatsapp</field>
        <field name="arch" type="xml">
            <form string="Send WhatsApp">
                <header>
                    <button name="action_send_whatsapp" 
                            string="Send WhatsApp" 
                            type="object" 
                            class="btn-success" 
                            icon="fa-whatsapp"
                            invisible="state == 'sent'"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><i class="fa fa-whatsapp text-success"/> Send WhatsApp</h1>
                    </div>
                    <group>
                        <group>
                            <field name="recipient_type" widget="radio" options="{'horizontal': true}"/>
                            <field name="recipient_single" invisible="recipient_type == 'multi'" placeholder="+1234567890"/>
                            <field name="recipient_multi" invisible="recipient_type == 'single'" placeholder="+12345, +67890"/>
                        </group>
                        <group>
                            <field name="message_body" widget="text" placeholder="Type your WhatsApp message..."/>
                        </group>
                    </group>
                    <notebook invisible="state == 'draft'">
                        <page string="Logs">
                            <field name="response_log" readonly="1"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_twilio_whatsapp_send" model="ir.actions.act_window">
        <field name="name">WhatsApp Messages</field>
        <field name="res_model">twilio.whatsapp</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>