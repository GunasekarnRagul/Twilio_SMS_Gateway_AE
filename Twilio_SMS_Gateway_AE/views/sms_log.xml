<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_sms_log_search_v7" model="ir.ui.view">
        <field name="name">sms.log.search.v7</field>
        <field name="model">sms.log</field>
        <field name="arch" type="xml">
            <search string="Search Logs">
                <field name="to_number"/>
                <field name="message_body"/>
                <field name="status"/>
                
                <filter string="Successful" name="sent" domain="[('status', '=', 'sent')]"/>
                <filter string="Failed" name="failed" domain="[('status', '=', 'failed')]"/>
            </search>
        </field>
    </record>

    <record id="view_sms_log_list_v7" model="ir.ui.view">
        <field name="name">sms.log.list.v7</field>
        <field name="model">sms.log</field>
        <field name="arch" type="xml">
            <list string="SMS History" 
                  create="0" 
                  edit="0" 
                  delete="0"
                  default_order="create_date desc">
                
                <field name="create_date" string="Date"/>
                <field name="source_display" string="Source" widget="badge" decoration-info="True"/>
                <field name="to_number_display" string="Recipient"/>
                <field name="message_body" optional="show"/>
                <field name="status" widget="badge"
                       decoration-success="status == 'sent'" 
                       decoration-danger="status == 'failed'"/>
            </list>
        </field>
    </record>

    <record id="view_sms_log_form_v7" model="ir.ui.view">
        <field name="name">sms.log.form.v7</field>
        <field name="model">sms.log</field>
        <field name="arch" type="xml">
            <form string="SMS Details">
                <header>
                    <field name="status" widget="statusbar" statusbar_visible="sent,failed"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="to_number" readonly="1"/></h1>
                        <label for="create_date" string="Sent On"/>
                        <field name="create_date" readonly="1"/>
                    </div>
                    <group>
                        <group string="Source Info">
                            <field name="source_model" readonly="1"/>
                            <field name="source_display" readonly="1"/>
                            <field name="custom_header" invisible="1"/>
                            <field name="sale_order_id" invisible="not sale_order_id" readonly="1"/>
                        </group>
                        <group string="Status">
                            <field name="status" widget="badge" 
                                   decoration-success="status == 'sent'" 
                                   decoration-danger="status == 'failed'"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Message Content">
                            <field name="message_body" readonly="1"/>
                        </page>
                        <page string="Technical / API Response">
                            <field name="api_response" readonly="1"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_clear_sms_logs_server_v7" model="ir.actions.server">
        <field name="name">Clear All History</field>
        <field name="model_id" ref="model_sms_log"/>
        <field name="binding_model_id" ref="model_sms_log"/>
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="code">
action = model.action_delete_all_logs()
        </field>
    </record>

    <record id="action_sms_log_viewer" model="ir.actions.act_window">
        <field name="name">SMS Logs</field>
        <field name="res_model">sms.log</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_sms_log_search_v7"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No logs found.
            </p>
        </field>
    </record>

</odoo>