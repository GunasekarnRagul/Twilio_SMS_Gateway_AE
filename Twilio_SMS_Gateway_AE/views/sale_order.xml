    <!-- SMS Log Search View -->
    <record id="view_sms_log_sale_order_search" model="ir.ui.view">
        <field name="name">sms.log.sale.order.search</field>
        <field name="model">sms.log</field>
        <field name="arch" type="xml">
            <search string="Search SMS Logs">
                <field name="to_number"/>
                <field name="sale_order_id"/>
                <field name="message_body"/>
                <field name="status"/>
                <filter string="Sent" name="filter_sent" domain="[('status', '=', 'sent')]"/>
                <filter string="Failed" name="filter_failed" domain="[('status', '=', 'failed')]"/>
                <filter string="Sales Orders" name="filter_sale_orders" domain="[('source_model', '=', 'sale.order')]"/>
                <group expand="0" string="Group By">
                    <filter string="Status" name="group_status" context="{'group_by': 'status'}"/>
                    <filter string="Sales Order" name="group_sale_order" context="{'group_by': 'sale_order_id'}"/>
                    <filter string="Date" name="group_date" context="{'group_by': 'create_date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action for SMS Logs (Sales Order Context) -->
    <record id="action_sms_log_sale_orders" model="ir.actions.act_window">
        <field name="name">Sales Order SMS Logs</field>
        <field name="res_model">sms.log</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('source_model', '=', 'sale.order')]</field>
        <field name="context">{'default_source_model': 'sale.order'}</field>
        <field name="search_view_id" ref="view_sms_log_sale_order_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No SMS logs found for Sales Orders.
            </p>
            <p>
                SMS sent from sales order confirmations will appear here automatically.
            </p>
        </field>
    </record>



