<odoo>
  <!-- =======================
         WHATSAPP TEMPLATE
    ======================== -->
    <record id="view_twilio_whatsapp_template_tree" model="ir.ui.view">
        <field name="name">twilio.whatsapp.template.tree</field>
        <field name="model">twilio.whatsapp.template</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="message"/>
            </tree>
        </field>
    </record>

    <record id="view_twilio_whatsapp_template_form" model="ir.ui.view">
        <field name="name">twilio.whatsapp.template.form</field>
        <field name="model">twilio.whatsapp.template</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="message"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_twilio_whatsapp_template" model="ir.actions.act_window">
        <field name="name">WhatsApp Templates</field>
        <field name="res_model">twilio.whatsapp.template</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>