<odoo>
    <record id="view_sms_import_wizard_form" model="ir.ui.view">
        <field name="name">sms.import.wizard.form</field>
        <field name="model">sms.import.wizard</field>
        <field name="arch" type="xml">
            <form string="Import Numbers">
                <group>
                    <field name="file_data" filename="file_name" widget="binary" string="Upload Excel"/>
                    <field name="file_name" invisible="1"/>
                </group>
                <div class="alert alert-info" role="alert">
                    <p><strong>Instructions:</strong></p>
                    <ul>
                        <li>File must be <b>.xlsx</b> or <b>.xls</b>.</li>
                        <li>First row must contain a header named <b>mobile_numbers</b>.</li>
                        <li>Numbers must contain country code (e.g. <b>+91</b>638...).</li>
                        <li>Numbers without '+' will be ignored.</li>
                    </ul>
                </div>
                <footer>
                    <button name="action_import_apply" string="Import &amp; Validate" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_sms_import_wizard" model="ir.actions.act_window">
        <field name="name">Import Excel</field>
        <field name="res_model">sms.import.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>